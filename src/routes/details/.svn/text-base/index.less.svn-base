@PrefixCls: details;
.@{PrefixCls}-outer {
  width: 100%;
  overflow-y: scroll;
  &-title {
    padding: 40px 40px;
    font-weight: 600;
    line-height: 1.4em;
    font-size: 40px;
    background: #fff;
    border-bottom: 2px solid #ddd;
  }
  &-date {
    font-size: 30px;
    text-align: right;
    background: #fff;
    padding: 15px 60px;
    color: #aaa;
  }
  &-content {
    padding: 20px 20px 40px 20px;
    background: #fff;
    font-size: 40px;
    line-height: 1.7;
    & img {
      max-width: 100% !important;
      max-height: 100% !important;
      height: auto !important;
    }
    & video audio{
      width: 100%;
      text-align: center;
    }
    & p video {
      width: 100%;
    }
    & p audio {
      width: 100%;
    }
    & * {
      max-width: 100% !important;
      overflow: hidden;
    }
  }
}
