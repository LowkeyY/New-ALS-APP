@PrefixCls:patryitems;
.@{PrefixCls}-container{
  width: 100%;
  height: 400px;
  overflow: hidden;
  margin: 20px 0;
  position: relative;

  & img{
    width: 100%;
    height: 100%;
    border-radius: 20px;
  }
   &-info{
     width: 100%;
     height:100px;
     position: absolute;
     left: 0;
     bottom:0;
     padding: 0 20px;
     box-sizing: border-box;
     display: flex;
     justify-content: space-between;
     align-items: center;
     background: rgba(0,0, 0,.6 );
     color: #fff;
     border-radius:0 0 20px 20px;
     &-title{
       font-size: 70px;
     }
     &-sub{
       display: none;
     }
   }
}
