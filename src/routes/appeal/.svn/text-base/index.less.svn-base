@PrefixCls: appeal;
@ColorCard: white;
@ColorInfo: white;
@FontSizeLg: 35px;
@FontSizeNm: 30px;
@FontSizeSm: 25px;

.imgs {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin: 10px 15px 0 15px;
}

.@{PrefixCls}-outer {
  background: #fff;
  min-height: 50px;
  padding-bottom: 100px;

  &-title {
    display: flex;
    max-height: 50px;
    align-items: center;
    width: 100%;
    background: #4eaaf7;
    padding: 20px 50px;
    & img {
      margin-left: 1%;
      width: 49%;
      .imgs;
    }

    & span {
      font-size: 50px;
    }
  }

  &-content {
    padding: 20px 40px;
    &-info {
      display: flex;
      justify-content: flex-start;
      background-color: #e3eef7;
      height: 1rem;

      & img {
        .imgs;
      }

      &-details {
        display: flex;
        justify-content: space-between;
        flex-direction: column;

        &-name {
          font-weight: bold;
        }
        &-date {

          & span {
            margin-right: 100px;
          }
        }
      }
    }

    &-details {

      &-problem {
        margin-top: 20px;
        background: #ddd;
        padding: 10px 10px;

        & p {
          font-weight: bold;
          margin: 0 0 20px 0;
          & span {

            color: #aaa;
          }
        }

      }
      &-imgbox {
        margin-top: 20px;
        display: flex;
        justify-content: flex-start;
        & img {
          width: 33.3%;
          height: 100%;
          margin: 0 10px;
        }
      }

    }

  }

}

.@{PrefixCls}-nav {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  & span {
    font-size: 32px;
  }
}

.@{PrefixCls}-infobox {
  background: #fff;
  &-title {
    color: orange;
  }
  &-container {
    padding: 0 40px;
    &-items {
      font-size: 24px;
      display: flex;
      align-items: center;
      padding: 20px 0;
      & img {
        width: 40px;
        margin-right: 10px;
      }
    }
  }
}


