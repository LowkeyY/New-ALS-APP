@PrefixCls:ecology;

.@{PrefixCls}-itembox{
  background-size: cover;
   padding: 20px 20px;
   width: 100%;
  height: 300px;
  font-weight: bold;
  font-size: 36px;
  display: flex;
  box-sizing: border-box;
  justify-content: flex-start;
  border-bottom: 2px solid #ddd;
  &-left{
    width: 38%;
    border-right: 2px solid #888;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;

    & img{
      width: 150px;
      height: 150px;
    }
    & span {
      margin-top: 10px;
    }
  }

  &-right{
    width: 60%;
    padding-left: 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    &-top{
      height: 50%;
      box-sizing: border-box;
      border-bottom: 2px solid #888;
      display: flex;
      align-items: center;
      & img{
        width:100px;
        height:100px;
      }

      & p{
        margin-left:80px;
      }
    }

    &-bottom{
      height: 50%;
      display: flex;
      align-items: center;
      & img{
        width:100px;
        height:100px;
      }
      & p{
        margin-left: 80px;
      }
    }
  }
}

.@{PrefixCls}-imgbox{
  background: #fff;
  & img{
    width: 100%;
    max-height: 200px;
  }
}

