@import '../../themes/default.less';
@PrefixCls:integralcard;
.@{PrefixCls}-outer{
  width: 48%;
  padding: 20px;
  border-right: 2px solid #ddd;
  border-bottom: 2px solid #ddd;
  &-imgbox{
    margin-bottom: 10px;

    & img{
      width: 100%;
      height: 180px;
    }
  }

  &-info{

    &-title{
      font-weight: bold;
      margin-bottom: 20px;
    }

    &-coin{
     display: flex;
      justify-content: space-between;
      &-details{
        color:#ff9d3a;
        font-size: 28px;
      }

      &-button{
        padding: 4px 6px;
        background: @primary-color;
        color: white;
      }
    }
  }
}
