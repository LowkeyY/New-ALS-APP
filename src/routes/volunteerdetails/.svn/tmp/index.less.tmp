@PrefixCls: volunteerdetails;
.@{PrefixCls}-container {
  width: 100%;
  background: #fff;
  &-company {
    padding: 20px;
    text-indent: 2em;
    border-bottom: 2px dashed #ddd;
    line-height: 1.5em;
  }
  & img {
    width: 100%;
    max-height: 25vh;
  }

  &-title {
    padding: 20px;
    border-bottom: 2px dashed #ddd;
    margin-bottom: 40px;
    & :nth-child(1) {
      color: #888;
      font-size: 32px;
      margin-right: 40px;

    }
    & :nth-child(2) {
      font-size: 32px;
    }
  }
  &-content {
    border-bottom: 2px dashed #ddd;

    &-item {
      margin-top: 20px;
      display: flex;
      align-items: center;
      padding: 0 0 20px 20px;

      &-before {
        color: #888;
        margin-right: 40px;
      }
    }
  }

}

.@{PrefixCls}-userinfo {
  display: flex;
  align-items: center;

  & span {
    margin-right: 20px;
  }
  &-address {
    font-size: 28px;
    color: #888;
  }
