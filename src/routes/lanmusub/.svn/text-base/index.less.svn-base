@PrefixCls:lanmusub;
@{PrefixCls}-list {
  width: 100%;
  display: flex;
  &-title {
    flex: 8;
    padding-left: 15px;
  }
  &-pic {
    flex: 2;
  }
}

.@{PrefixCls}-item {
  & span {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  & img {
    width: 180px;
    height: 120px;
  }
}
